---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
	<div class="orange-circle"></div>
	<div class="magenta-circle"></div>
	<div class="cyan-circle"></div>
		<slot />
	</body>
</html>

<style is:global>
	html, body {
		margin: 0;
		padding: 0;
		border: 0;
		font-size: 100%;
		font: inherit;
	}

	/* HTML5 display-role reset for older browsers */
	article, aside, details, figcaption, figure,
	footer, header, hgroup, menu, nav, section {
		display: block;
	}

	body {
		line-height: 1;
		text-wrap: balance;
	}

	/* TODO: improve on colors */
	.orange-circle {
		position: fixed;
		--width: 1097px;
		--height: 1097px;
		width: var(--width);
		height: var(--height);
		top: calc(-1 * var(--height) / 2);
		left: calc(-1 * var(--width) / 2);
		border-radius: 100vw;
		background-image: radial-gradient(#FF8A00, transparent 50%);
		opacity: 0.3;
		z-index: -1;
	}

	.magenta-circle {
		position: fixed;
		--width: 1097px;
		--height: 1097px;
		width: var(--width);
		height: var(--height);
		top: calc(-1 * var(--height) / 2);
		right: -10%;
		border-radius: 100vw;
		background-image: radial-gradient(#FF00F5, transparent 50%);
		opacity: 0.3;
		z-index: -1;
	}

	.cyan-circle {
		position: fixed;
		--width: 1097px;
		--height: 1097px;
		width: var(--width);
		height: var(--height);
		top: -59px;
		right: calc(-1 * var(--width) / 2);;
		border-radius: 100vw;
		background-image: radial-gradient(#00FFE0, transparent 50%);
		opacity: 0.3;
		z-index: -1;
	}

	:root {
		/* Color Variables */
		--text-color: #FEE2FF;
		--background-color: #08000E;

		/* sizes */
		--space-68: 68px;
	}

	html {
		font-family: "Montserrat", system-ui, sans-serif;
		background: var(--background-color);
		color: var(--text-color);
	}

</style>
